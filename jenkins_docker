pipeline {
    agent any

    stages {
        
        stage(maven) {
            steps{
                    sh 'mvn clean install -DskipTests'
                }
            }
        stage('Docker') {
            steps {
                  sh 'docker build -t realtime .'
                }
               } 

        stage('Docker login') {
            steps {
                  sh 'aws ecr-public get-login-password --region us-east-1 | docker login --username AWS --password-stdin public.ecr.aws/l8o7b7t9'
                }
            
               }        
        stage('Docker tag') {
            steps {
                  sh 'docker tag docker-repo:latest public.ecr.aws/l8o7b7t9/docker-repo:latest'
                }
            
               } 

        stage('Docker push') {
            steps {
                  sh 'docker push public.ecr.aws/l8o7b7t9/docker-repo:latest'
                }
            
               }        

        }
}
